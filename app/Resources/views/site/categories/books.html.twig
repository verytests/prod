{% extends 'site/category.html.twig' %}

{% block navBooks %}active{% endblock %}

{% block title %} Book tests on verytests.com {% endblock %}

{% block searchForm %}{{ path('categories_books_search') }}{% endblock %}

{% block searchNav %}
    {% if keywords is defined %}
        {% for keyword in keywords|slice(0,3) %}
            <a href="{{ path('categories_books_search', {'q': keyword}) }}" class="btn btn-outline-success searchTag fatFont">{{ keyword|capitalize }}</a>
        {% endfor %}
    {% endif %}
{% endblock %}

{% block subCategories %}
    {% if subCategories is defined %}
        {% for sub in subCategories %}
            <a href="{{ path('categories_books_sub', {'id': sub.id}) }}" class="btn btn-outline-primary subCategory">{{ sub.category }}</a>
        {% endfor %}
    {% endif %}
{% endblock %}
